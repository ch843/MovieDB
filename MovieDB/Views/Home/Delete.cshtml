@{
    ViewData["Title"] = "Confirm Delete";
}
@model Movie

<h2>Confirm Deletion</h2>
<p>Are you sure you want to delete "@Model.Title" from your collection?</p>
<form method="post">
    <input type="hidden" asp-for="MovieId"/>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-info" asp-controller="Home" asp-action="Collection">Cancel</a>
</form>