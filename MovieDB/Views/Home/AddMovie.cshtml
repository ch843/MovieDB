@{
    ViewData["Title"] = "Add Movie";
}
@model Movie
<h2 class="display-4 text-center">Add Movie to Collection</h2>
<br />
<form>
    <div class="form-group">
        <label asp-for="Title">Enter Move Title:</label><br />
        <input asp-for="Title" required/>
    </div><br />
    <div class="form-group">
        <select asp-for="Category" required>
            <option value="" disabled selected>Choose a category</option>
            <option value="Drama">Drama</option>
            <option value="Television">Television</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Comedy">Comedy</option>
            <option value="Family">Family</option>
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Miscellaneous">Miscellaneous</option>
        </select>
    </div><br />
    <div class="form-group">
        <label asp-for="Year">Year Produced:</label><br />
        <input asp-for="Year" type="number" min="1900" max="2099" step="1" placeholder="2024" required/>
    </div><br />
    <div class="form-group">
        <label asp-for="Director">Enter Director's Name:</label><br />
        <input asp-for="Director" required/>
    </div><br />
    <div class="form-group">
        <select asp-for="Rating" required>
            <option value="" disabled selected>Choose a rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div><br />
    <div class="form-group">
        <label>Has this movie record been edited?</label><br />
        <input type="radio" asp-for="Edited" value="True">
        <label asp-for="Edited">Yes</label><br>
        <input type="radio" asp-for="Edited" value="False">
        <label asp-for="Edited">No</label><br>
    </div><br />
    <div class="form-group">
        <label asp-for="Lent">If applicable, who was it lent to?</label><br />
        <input asp-for="Lent"/>
    </div><br />
    <div class="form-group">
        <label asp-for="Notes">(Optional) Add a note to this movie record</label><br />
        <textarea asp-for="Notes" maxlength="25"></textarea>
    </div><br />
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>